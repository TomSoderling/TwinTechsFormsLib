<?xml version="1.0" encoding="UTF-8"?>

<controls:FastCell
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="TwinTechs.Example.FastCells.Cells.UnevenFastCell"
	xmlns:controls="clr-namespace:TwinTechs.Controls;assembly=TwinTechsForms"
	xmlns:local="clr-namespace:TwinTechs.Example.FastCells.Cells;assembly=TwinTechsFormsExample">

	<AbsoluteLayout
		BackgroundColor="White">

		<Label
			x:Name="NameLabel"
			Text="Someone"
			TextColor="Black"

			AbsoluteLayout.LayoutFlags="None"
			FontSize="Small"
			AbsoluteLayout.LayoutBounds="50,0,100,30" />

		<Label
			x:Name="DescriptionLabel"
			Text="Description"
			TextColor="Black"
			AbsoluteLayout.LayoutFlags="None"
			FontSize="Small"
			AbsoluteLayout.LayoutBounds="100,0,100,40" />

	</AbsoluteLayout>

</controls:FastCell>
